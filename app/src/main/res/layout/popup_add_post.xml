<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:background="#fff"
            android:layout_width="48dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etDescriptionPopup"
            app:layout_constraintStart_toEndOf="@+id/etTitlePopup"
            tools:srcCompat="@tools:sample/avatars[10]"
            android:id="@+id/ivPhotoProfilePopup"/>
    <EditText
            android:background="@drawable/bg_popup_editext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/title"
            android:ems="10"
            android:id="@+id/etTitlePopup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivPhotoProfilePopup"/>
    <EditText
            android:background="@drawable/bg_popup_editext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/description"
            android:ems="10"
            android:id="@+id/etDescriptionPopup"
            app:layout_constraintTop_toBottomOf="@id/etTitlePopup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:background="#2d2d2d"
            app:layout_constraintStart_toStartOf="@id/etDescriptionPopup"
            app:layout_constraintTop_toBottomOf="@id/etDescriptionPopup"
            app:layout_constraintEnd_toEndOf="@id/etDescriptionPopup"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="225dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]"
            android:id="@+id/ivPictureSelectedPopup"/>
    <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivPictureSelectedPopup"
            app:layout_constraintTop_toBottomOf="@id/ivPictureSelectedPopup"
            android:padding="12dp"
            android:background="@drawable/circle_bg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_menu_send"
            tools:layout_editor_absoluteY="249dp"
            tools:layout_editor_absoluteX="186dp"
            android:id="@+id/ivAddPostPoup"/>
    <ProgressBar
            android:padding="4dp"
            android:visibility="invisible"
            android:background="@drawable/circle_bg"
            app:layout_constraintStart_toStartOf="@id/ivAddPostPoup"
            app:layout_constraintEnd_toEndOf="@id/ivAddPostPoup"
            app:layout_constraintBottom_toBottomOf="@id/ivAddPostPoup"
            app:layout_constraintTop_toTopOf="@+id/ivAddPostPoup"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarPopup"/>

</androidx.constraintlayout.widget.ConstraintLayout>