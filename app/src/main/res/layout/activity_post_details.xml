<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PostDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/ivPostDetail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                app:layout_constraintTop_toBottomOf="@id/ivPostDetail"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvPostDetailDate"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                tools:text="11 dez 2019 | by Paulo Vinicius Coelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="22sp"
                android:lineSpacingExtra="4dp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/tvPostDetailDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvPostTitle"
                android:layout_margin="16dp"
                tools:text="Titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <View
                android:background="#2e2e2e"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
        <TextView
                android:lineSpacingExtra="8dp"
                android:textColor="#373737"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvPostDetailDesc"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean eget nisi sit amet ex interdum convallis."
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/ivPostDetailCurrentUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/tvPostDetailDesc"
                app:layout_constraintTop_toBottomOf="@+id/tvPostDetailDesc"
                android:src="@drawable/userphoto" />
        <EditText
                android:hint="@string/write_comment"
                android:background="@drawable/style_edittext_button_rounded"
                android:id="@+id/etPostDetailComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/ivPostDetailCurrentUser"
                app:layout_constraintStart_toEndOf="@+id/ivPostDetailCurrentUser"
                app:layout_constraintTop_toTopOf="@+id/ivPostDetailCurrentUser" />
        <ImageButton
                android:id="@+id/ibPostDetailAddComment"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_edittext_button_rounded"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_menu_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/etPostDetailComment"
                app:layout_constraintStart_toEndOf="@+id/etPostDetailComment"
                app:layout_constraintTop_toTopOf="@+id/etPostDetailComment"/>
        <ImageView
                android:id="@+id/ivPostDetailUserPhoto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPostDetailDate"
                app:layout_constraintStart_toEndOf="@+id/tvPostDetailDate"
                app:layout_constraintTop_toTopOf="@+id/tvPostDetailDate"
                tools:srcCompat="@tools:sample/avatars" />
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvPostDetailDesc"
                app:layout_constraintTop_toBottomOf="@+id/etPostDetailComment" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>