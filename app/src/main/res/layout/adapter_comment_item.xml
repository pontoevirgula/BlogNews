<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="#f4f4f4"
                                                   android:paddingTop="8dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/ivUserComment"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    <TextView
            android:id="@+id/tvUsername"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivUserComment"
            android:textColor="#969595"
            tools:text="Name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            tools:text="ComentÃ¡rio aqui"
            android:layout_margin="8dp"
            android:textColor="#969595"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toEndOf="@+id/ivUserComment"
            app:layout_constraintEnd_toEndOf="@id/tvDateComment"
            android:id="@+id/tvComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvDateComment"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000"
            tools:text="12:30"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View
            app:layout_constraintTop_toBottomOf="@id/tvComment"
            app:layout_constraintStart_toEndOf="@+id/ivUserComment"
            app:layout_constraintEnd_toEndOf="@id/tvDateComment"
            android:background="#2e2e2e"
            android:layout_width="0dp"
            android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>